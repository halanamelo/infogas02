algoritmo infogas02;
variáveis
    hi  : real; /*hora inicial*/
    ht1 : real; /*hora na primeira parada*/

    mi : real; /*minuto inicial*/
    mt1 : real; /*minuto na primeira parada*/

    qi : real; /*odometro inicial*/
    qt1 : real; /*odometro na primeira parada*/

    gt1 : real; /*gasolina na primeira parada*/
    gt : real; /*gasolina parada 2 em diante*/

    dp : real; /*distancia percorrida*/
    hp : real; /*hora percorrida*/
    mb : real; /*minutos percorridos*/
    mpt : real; /*minutos transformados em hora*/
    vm : real; /*velocidade media*/
    vmt : real; /*velocidade media total*/
    cc : real; /*consumo de combustivel*/
    dt : real; /*distancia total*/
    tt : real; /*tempo total do percurso*/
    tp : real; /*soma das horas com os minutos*/
    cc1 : real; /*calculo para consumo de combustivel*/
    prec1 : real; /*calculo da previsao*/
    previsao : real; /*previsao de chegada*/
    parada : real; /*parada do loop*/
    variacaominuto : real;
    htotal : real; /*hora pra vmt*/
    cct : real; /*consumo de combustivel total para calculo do ccht*/
    ccht : real; /*consumo de combustivel total em km/l do relatorio*/
    odometro : real; /*calculo do odometro final menos inicial para calculo de previsao*/
    vi : real; 
    y : real;
    horadeconversao : real;
    mp : real;
    mh : real;
    tempo : real;
fim-variáveis

início


/*Saída*/



        imprima ("\nOlá viajante\n\nSomos o aplicativo camelo e iremos lhe ajudar nesta sua viajem!");
        imprima ("Digite a hora de saida:");
         hi:= leia();
         imprima ("Digite os minutos de saida:");
         mi:= leia();
         imprima ("Digite a quilometragem inicial, odômetro:");
         qi:= leia();
         imprima ("Digite a distancia total da viagem:");
         dt:= leia();

         htotal := hi;
/*Primeiro abastecimento*/
         imprima ("\nVamos ao seu primeiro abastecimento!\n");

         imprima ("Digite a hora do seu primeiro abastecimento:");
         ht1:=leia();
         imprima ("Digite os minutos do seu primeiro abastecimento:");
         mt1:=leia();
         imprima ("Quanto marca o seu odometro na primeira parada :");
         qt1:=leia();
         imprima ("Digite quantos litros de gasolina foram abastecidos nesta parada:");
         gt1:=leia();
         dp := (qt1-qi);
         hp := (ht1-hi);
         mp := (mt1-mi);
         mh := (mp/60);
         tp := (hp+mh);
         vm := (dp/tp);
         imprima ("\nA sua velocidade média foi:\n ",vm, "km/h");
         cc := (dp/gt1);
         imprima ("\nO seu consumo combustivel foi de:\n ",cc, "km/l");

         dp := (qt1-qi);
         hp := (ht1-hi);
         mb := (mt1-mi);

         se mb < 0 então
           mb := (mb * -1);
         fim-se
         mpt := (mb / 60);
         tempo := (mpt + hp);
         vm := (dp/tempo);
         prec1 := (dt-dp);
         odometro := (dt+qi);
         previsao   := (prec1/vm);

         y := (previsao *60);


         enquanto y > 59 faça
           horadeconversao := horadeconversao +1;
           y := (y -60);
         fim-enquanto
        
         se horadeconversao + y = 0 então
            imprima ("Você chegou ao seu destino, por favor digite 1 na proxima pergunta");
         fim-se


         imprima ("\nPrevisao de chegada ao seu destino:\n ",horadeconversao, "h" , y , "m");
 
/*Inicio do loop*/


         cct := cct + gt1; 

         imprima ("Essa será sua ultima parada? Se sim digite 1, se não digite 2");
         parada := leia ();
         qi:=qt1;
         hi:=ht1;
         mi:=mt1;

         enquanto parada = 2 faça

         imprima ("Digite a hora do seu abastecimento:");
         ht1:=leia();
         imprima ("Digite os minutos do seu abastecimento:");
         mt1:=leia();
         imprima ("Quanto marca o seu odometro :");
         qt1:=leia();  
         imprima ("Digite quantos litros de gasolina foram abastecidos nesta parada:");
         gt1:=leia();
                 
         cct := cct + gt1;       
/*Inicio do calculo da velocidade media*/

         variacaominuto:=mt1-mi; 
 
         vm:=(qt1-qi)/((variacaominuto/60)+ht1-hi);



         imprima ("A sua velocidade média foi: ", vm, "km/h");

/*Inicio do calculo do consumo de combustivel*/
             
       
         cc:=(qt1-qi)/gt1;
         imprima ("O seu consumo combustivel foi de: ", cc, "km/l");

         dp := (qt1-qi);
         hp := (ht1-hi);
         mb := (mt1-mi);

         se mb < 0 então
           mb := (mb * -1);
         fim-se
         mpt := (mb / 60);
         tempo := (mpt + hp);
         vm := (dp/tempo);
         prec1 := (odometro-qt1);
         previsao   := (prec1/vm);

         y := (previsao *60);

         horadeconversao := 0;
         
         enquanto y > 59 faça
           horadeconversao := horadeconversao +1;
           y := y -60;
         fim-enquanto

         se horadeconversao + y = 0 então
           imprima ("Você chegou ao seu destino, por favor digite 1 na proxima pergunta");
         fim-se

         imprima ("Previsao de chegada ao seu destino: ", horadeconversao, "h" , y , "m" );

         qi:=qt1;
         hi:=ht1;
         mi:=mt1;
        
        imprima ("Essa será sua ultima parada? Se sim digite 1, se não digite 2");
         parada := leia(); 
    
     fim-enquanto

/*Após acabado o loop, imprimirá o relatorio final abaixo*/



  imprima ("Relatorio final do percurso");
        
         imprima (vi);
         ccht := dt/cct;
         imprima ("Seu consumo de combustivel total foi de: ", ccht, "km/l");
         vmt := dt/(ht1-htotal);
         imprima ("Velocidade média total: ", vmt, "km/h");


fim
