algoritmo infogas02;
variáveis
    hi : real; 
    h : real;
    mi : real;
    m : real;
    qi : real;
    q : real;
    gi : real;
    g : real;
    dp : real;
    hp : real;
    mp : real;
    mh : real;
    vm : real;
    cc : real;
    pc : real;
    dt : real;
    t : real;
    tt : real;
    tp : real;
    s : real;
    n : real;
    cc1 : real;
    prec1 : real;
    previsao : real;
    parada : real;
    parada1 : real;
fim-variáveis
 /* hi: hora inicial, h: hora, mi: minuto inicial, m: minuto, qi: quilometragem inicial, q: quilometragem, gi: gasolina inicial, g: gasolina final, vm: velocidade média, dp: distncia percorrida, hp: hora percorrida, cc: consumo de combustível, parada1:receber valor da pergunta de parada,  pc: previsão de chegada, previsão: previsão, parada: parada do laço, cc1: calculo para o consumo de combustível, dt: distância total, t: , tt:tempo total do percurso , s: , n: ,mp: minutos percorridos transformados em horas, tp: soma das horas com os minutos transformados em horas, tempo percorrido, mh: minutos transformados em horas */
início
    imprima ("Digite a hora de saida:");
    hi:= leia();
    imprima ("Digite os minutos de saida:");
    mi:= leia();
    imprima ("Digite a quilometragem inicial, odômetro:");
    qi:= leia();
    imprima ("Capacidade total em litros do tanque da gasolina:");
    t:=leia();
    imprima ("Digite quantos litros de gasolina foram colocados inicialmente no tanque:");  
    gi:= leia();
    imprima ("Digite a distancia total da viagem:");
    dt:= leia();
 

             imprima ("Essa será sua ultima parada? Se sim digite 1, se não digite 2");
             parada := leia ();
             
             enquanto parada = 2 faça
             
             imprima ("Digite a hora do seu abastecimento:");
             h:=leia();
             imprima ("Digite os minutos do seu abastecimento:");
             m:=leia();
             imprima ("A quilometragem que você percorreu :");
             q:=leia();
             imprima ("Digite a quantidade restante de gasolina no tanque em litros:");
             tt:=leia();
             imprima ("Digite quantos litros de gasolina foram abastecidos nesta parada:");
             g:=leia();
             dp := (q-qi);
             hp := (h-hi);
             mp := (m-mi);
             mh := (mp/60);
             tp := (hp+mh);
             vm := (dp/tp);
             imprima ("A sua velocidade média foi: ", vm, "km/h");
             dp := (qi-q);
             cc1 := (g-gi);
             cc := (dp/cc1);
             imprima ("O seu consumo combustivel foi de: ", cc, "km/l");
             dp := (q-qi);
             hp := (h-hi);
             mp := (m-mi);
             mh := (mp/60);
             tp := (hp+mh);
             vm := (dp/tp);
             qi := q;
             gi := g;
             prec1 := (dt-dp);
             previsao   := ((prec1/vm)-(dt/vm));
             imprima ("Previsao de chegada ao seu destino: ", previsao, "horas");
             imprima ("Essa será sua ultima parada? Se sim digite 1, se não digite 2");
             parada := leia(); 
    
  fim-enquanto
  imprima ("Relatorio final do percurso");
fim
