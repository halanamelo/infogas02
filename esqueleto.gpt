algoritmo infogas02;
variáveis
    hi : real; 
    h : real;
    mi : real;
    m : real;
    qi : real;
    q : real;
    gi : real;
    g : real;
    dp : real;
    hp : real;
    mp : real;
    mh : real;
    tpiha : real;
    vm : real;
    cc : real;
    pc : real;
    dt : real;
    t : real;
    tt : real;
    tp : real;
    s : real;
    n : real;
    cc1 : real;
fim-variáveis
 /* hi: hora inicial, h: hora, mi: minuto inicial, m: minuto, qi: quilometragem inical, q: quilometragem, gi: gasolina inicial, g: gasolina final, vm: velocidade média, dp: distncia percorrida, hp: hora percorrida, cc: consumo de combustível, pc: previsão de chegada, dt: distância total, t: , tt: , s: , n: ,mp: minutos percorridos transformados em horas, tp: soma das horas com os minutos transformados em horas, tempo percorrido, mh: minutos transformados em horas */

início
    imprima ("Digite a hora:");
    hi:= leia();
    imprima ("Digite os minutos:");
    mi:= leia();
    imprima ("Digite a quilometragem inicial, odômetro:");
    qi:= leia();
    imprima ("Capacidade total em litros do tanque da gasolina:");
    t:=leia();
    imprima (" Digite quantos litros de gasolina foram colocados no tanque:");  
    gi:= leia();
    imprima ("Digite a distancia total da viagem:");
    dt:= leia();
 
             repita
              

        imprima ("Digite a hora do abastecimento:");
        h:=leia();
        imprima ("Digite os minutos do abastecimento:");
        m:=leia();
        imprima ("Quilometragem percorrida:");
        q:=leia();
        imprima ("Digite a quantidade restante de gasolina no tanque em litros:");
        tt:=leia();
        imprima ("Digite quantos litros de gasolina foram abastecidos nesta parada:");
        g:=leia();
        dp := (q-qi);
        hp := (h-hi);
        mp := (m-mi);
        mh := (mp/60);
        tp := (hp+mh);
        vm := (dp/tp);
        imprima ("Sua velocidade média foi: ", vm, "km/h");
        cc1 := (g-gi);
        cc := (dp/gi-tt);
        imprima ("consumo combustivel: ", cc, "km/l");
        
        

        imprima ("previsao de chegada: pc = (h+vm/dp");
        imprima ("ULTIMO ABASTECIMENTO : PARA SIM DIGITE 101, PARA NAO DIGITE 100 (101,100):");
        até(101);
    imprima ("Relatorio final do percurso");

fim
